<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <fragment
        android:id="@+id/data_fragment"
        android:name="application.android.vicinflames.disponibilidad_gplaces.Fragments.DataFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >


    <TextView
        android:id="@+id/coords"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="55dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="46dp"
        android:text="Coords:"
/>

    <ImageView
        android:id="@+id/img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/coords"
        android:layout_marginEnd="60dp"
        android:layout_marginRight="60dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/coords_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/coords"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/coords"
        android:layout_toRightOf="@+id/coords"
        android:text="-" />

    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/coords"
        android:layout_alignStart="@+id/coords"
        android:layout_below="@+id/coords"
        android:layout_marginTop="14dp"
        android:text="DirecciÃ³n:" />

    <TextView
        android:id="@+id/address_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/coords_text"
        android:layout_alignStart="@+id/coords_text"
        android:layout_alignTop="@+id/address"
        android:text="-" />


    </fragment>

</RelativeLayout>